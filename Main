import java.awt.*;
import java.awt.event.KeyEvent;
import java.awt.event.KeyListener;
import javax.swing.*;

public class Main extends JPanel
{
  private boolean inMainMenu = false;
  private boolean inControls = false;
  private Spaceship ship = new Spaceship(300,600);
  
  private static DiverList diverList = new DiverList();
  
  public Main()
  {
    addKeyListener(new KeyListener() {
      @Override 
      public void keyTyped(KeyEvent e) { 
      }
      @Override 
      public void keyReleased(KeyEvent e) {
        ship.keyReleased(e);
      }
      @Override
      public void keyPressed(KeyEvent e) {
        ship.keyPressed(e);
      }
    }); 
    setFocusable(true);
  }
  
  public void paint(Graphics g)
  {
    super.paint(g);
    Graphics2D g2d = (Graphics2D) g;
    g2d.setRenderingHint(RenderingHints.KEY_ANTIALIASING,
                         RenderingHints.VALUE_ANTIALIAS_ON);
    ship.paint(g2d);
    diverList.paint(g2d);
  }
  
  public void move()
  {
    ship.move();
    diverList.move();
  }
  
  public static void main (String[] args) throws InterruptedException
  {
    JFrame frame = new JFrame("Space Stuff");
    Main main = new Main();
    frame.add(main); 
    frame.setSize(800,800); 
    frame.setVisible(true);
    frame.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
    
    for(int i = 20; i > 0; i--)
    {
      double q = 736 * Math.random();
      Diver diver = new Diver((int)q, -120*i);
      diverList.addAtFront(diver);
    }
    
    while (true)
    {
      main.move();
      main.repaint();
      Thread.sleep(5);
    }
  }
}
