import java.awt.*;
import java.awt.event.KeyEvent;
import java.awt.event.KeyListener;
import javax.swing.*;
import javax.imageio.*;
import java.io.*;
import java.awt.Image;
import java.awt.image.BufferedImage;
import java.util.*;

public class EnemyShot extends BadObj
{
  BufferedImage img = null;
  private int x;
  private int y;
  private int ya = 4;
  private int dmg = 1;
  private int h = 20;
  private int w = 9;
  private int health = 1;
  ArrayList list;
  
  public EnemyShot(int x, int y, ArrayList list)
  {
    this.x = x;
    this.y = y;
    this.list = list;
    try {
      img = ImageIO.read(new File("bullet2.png"));
    } catch (IOException e) {
    }
  }
  
  public void move()
  {
    y = y + ya;
  }
   
  public void paint(Graphics g)
  {
    g.drawImage(img,x,y,null);
  }
  
  public int getX()
  {
    return x;
  }
  
  public int getY()
  {
    return y;
  }
  
  public int getW()
  {
    return w;
  }
  
  public int getH()
  {
    return h;
  }
  
  public int getDMG()
  {
    return dmg;
  }
  
  public int getHealth()
  {
    return health;
  }
  
  public void setHealth(int d)
  {
    health = health - d;
  }
}
